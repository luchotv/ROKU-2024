<component name="mainScene" extends="Scene">
    <interface>
        <field id="routerCallback" type="assocarray" onChange="routingEventCallback" alwaysNotify="true"/>
        <field id="rootScene" type="boolean"/>
    </interface>
    <script type="text/brightscript" uri="pkg:/components/mainScene.brs"/>
    <script type="text/brightscript" uri="pkg:/components/scenes/router.brs"/>
    <children>
        <Rectangle id="background" color="0x5700A9FF" width="1920" height="1080"/>
        <Group id="scenes"/>
    </children>
</component>


