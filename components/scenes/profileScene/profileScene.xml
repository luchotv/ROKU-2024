<?xml version="1.0" encoding="utf-8" ?>

<component name="profileScene" extends="baseScene">
    <interface>
        <field id="profileSelected" type="boolean" value="false" alwaysNotify="true"/>
        <field id="nameSelected" type="string" value=""/>
    </interface>
    <script type="text/brightscript" uri="pkg:/components/scenes/profileScene/profileScene.brs"/>
    <children>
        <LayoutGroup 
            id="profileContainer" 
            layoutDirection="horiz" 
            itemSpacings="[10]" 
            vertAlignment="center" 
            horizAlignment="left" 
            translation="[50, 500]">
            <profileItem id="profile1" uri="pkg:/components/images/cat.jpg" name="CAT"/>
            <profileItem id="profile2" uri="pkg:/components/images/lion.jpg" name="LION"/>
            <profileItem id="profile3" uri="pkg:/components/images/dog.jpg" name="DOG"/>
            <profileItem id="profile4" uri="pkg:/components/images/horse.jpg" name="HORSE"/>
        </LayoutGroup>
    </children>
</component>


